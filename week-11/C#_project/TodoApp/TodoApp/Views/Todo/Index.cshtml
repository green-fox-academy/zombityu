@model User

<h2>Add new todo</h2>
<form action="/Home/Add?username=@Model.UserName" method="post">
    <div class="form-group">
        <label for="name">Name: </label>
        <input type="text" name="name" id="name" class="form-control" />
    </div>
    <input type="submit" value="Add" class="btn btn-secondary" />
</form>

<h2>My todos</h2>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Action</th>
    </tr>

    @foreach (var todo in Model.Todos)
    {
        <tr>
            <td>@todo.Name</td>
            <td>
                <form asp-controller="Todo" asp-action="Delete" asp-route-id="@todo.TodoId" asp-route-username="@Model.UserName" method="post">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
            <td>
                <form asp-controller="Todo" asp-action="EditTodo" asp-route-id="@todo.TodoId" method="post">
                    <button class="btn btn-primary">Edit</button>
                </form>
            </td>
        </tr>
    }
</table>


